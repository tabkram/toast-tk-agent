<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.right {
			float: right;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Button styleName="{style.right}" ui:field="loadButton">Refresh</g:Button>
		<h2>Administration Setup</h2>
		<g:VerticalPanel>
			<g:HTMLPanel>
				<span>BASE URL: </span>
				<g:TextBox ui:field="baseUrlField" width="400px">http://genexus:8080/nexus/content/repositories/snapshots/</g:TextBox>
			</g:HTMLPanel>		
			<g:HTMLPanel>
				<span>Package Folder: </span>
				<g:TextBox ui:field="packageFolderField" width="400px">fr/gefco/tli/psc/PscTestGreenPepper/1.4-SNAPSHOT/</g:TextBox>
			</g:HTMLPanel>		
			<g:HTMLPanel>
				<span>Test Jar: </span>
				<g:ListBox ui:field="jarField" width="400px"></g:ListBox>
			</g:HTMLPanel>		
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 